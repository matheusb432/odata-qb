{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "target": "es2017",
    "allowJs": true,
    "module": "es6",
    "outDir": "lib-esm",
    "rootDir": "src",
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["jest"],
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" },
  "exclude": ["lib-esm", "examples"]
}
